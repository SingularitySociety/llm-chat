rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /chats/{chatId} {
      allow read
      allow create: if request.resource.data.uid == request.auth.uid && request.resource.data.keys().hasAll(['uid', 'type', 'createdAt']);
      allow delete, update: if false;
    }
    match /chats/{chatId}/tmp/{messageId} {
      allow read: if get(/databases/$(database)/documents/chats/$(chatId)).data.uid == request.auth.uid;
      allow create: if get(/databases/$(database)/documents/chats/$(chatId)).data.uid == request.auth.uid && request.resource.data.uid == request.auth.uid && request.resource.data.keys().hasAll(['uid', 'message', 'createdAt', 'introIndex']);
      allow update, delete: if false;
    }

    match /users/{uid}/statistics/{date} {
      allow read: if uid == request.auth.uid;
      allow create, update, delete: if false;
    }
    match /users/{uid} {
      allow read: if true;
      allow create, update, delete: if uid == request.auth.uid;
    }

    match /message/{messageId} {
      allow read, create;
      allow delete, update: if false;
    }
    match /test/{testId} {
      allow read;
      allow create, delete, update: if false;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
